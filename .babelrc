{
  "presets": [
    "@babel/preset-env",
    "@vue/babel-preset-jsx"
  ],
  "plugins": [
    "@babel/plugin-transform-runtime",
    "@babel/plugin-syntax-dynamic-import"
  ],
  "env": {
    "utils": {
      "presets": [
        ["@babel/preset-env", {
          "loose": true,
          "modules": "commonjs"
        }]
      ],
      "plugins": [
        ["module-resolver", {
          "root": ["wot-design"],
          "alias": {
            "wot-design/src": "wot-design/lib",
            "wot-design/packages": "wot-design/lib"
          }
        }]
      ]
    },
    "test": {
      "presets": ["@babel/preset-env"]
    }
  }
}
